@model AuthorizationServer.MVC.Models.RegisterViewModel
<form autocomplete="off" asp-route="Register">
    <input type="hidden" asp-for="ReturnUrl"/>
    <div class="card">
        <input type="text" class="form-control form-control-lg" placeholder="Email" asp-for="Email" autofocus autocomplete="off">
        <input type="password" class="form-control form-control-lg form-control-last" placeholder="Password" asp-for="Password" autocomplete="new-password">
    </div>
    <div class="input-validation-error">@Html.ValidationSummary()</div>
    <p>
        <button type="submit" class="btn btn-primary btn-block mt-3">Register</button>
    </p>
</form>
<p><a class="mt-3" asp-controller="Account" asp-action="Login" asp-route-returnUrl="/">Already have account? Sign in!</a></p>
<p><a class="text-secondary mt-3" asp-controller="Home" asp-action="Index" asp-route-returnUrl="/">To homepage</a></p>